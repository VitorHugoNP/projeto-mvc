@model ProjetoMVC.Models.Filme
@{
    ViewData["Title"] = "Cadastro de Filmes";
}

<h2>Adicionar Novo Filme</h2>

<form asp-action="Update">
    <div class="form-group">
        <label for="titulo">Título:</label>
        <input type="text" class="form-control" id="titulo" name="titulo"
               value="@Model.Titulo" required>
    </div>
    <div class="form-group">
        <label for="sinopse">Sinopse:</label>
        <textarea class="form-control" id="sinopse" name="sinopse"
                  value="@Model.Sinopse" required></textarea>
    </div>
    <div class="form-group">
        <label for="dataLancamento">Data de Lançamento:</label>
        <input type="date" class="form-control" id="dataLancamento"
               name="data_lancamento" value="@Model.Data_lancamento" required>
    </div>
    <div class="form-group">
        <label for="genero">Genero:</label>
        <input type="text" class="form-control" id="genero" name="genero"
               value="@Model.Genero">
    </div>
    <div class="form-group">
        <label for="classificacao">Classificação:</label>
        <input type="text" class="form-control" id="classificacao"
               name="classificacao" value="@Model.Classificacao>
    </div>
    <button type="submit" class="btn btn-primary">Atualizar</button>
</form>